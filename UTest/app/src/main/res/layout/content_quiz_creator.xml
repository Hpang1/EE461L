<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.team8.utest.QuizCreator"
    tools:showIn="@layout/activity_quiz_creator"
    android:clipChildren="false">


    <include
        android:id="@+id/createBar"
        layout="@layout/buttonbarquizcreate"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true">
    </include>
    <include
        android:id="@+id/choice5"
        android:layout_above="@id/createBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        layout="@layout/choice"></include>
    <include
        android:id="@+id/choice4"
        android:layout_above="@id/choice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        layout="@layout/choice"></include>
    <include
        android:id="@+id/choice3"
        android:layout_above="@id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        layout="@layout/choice"></include>
    <include
        android:id="@+id/choice2"
        android:layout_above="@id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        layout="@layout/choice"></include>
    <include
        android:id="@+id/choice1"
        android:layout_above="@id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        layout="@layout/choice"></include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionText"
        android:layout_above="@id/choice1"
        android:layout_alignParentTop="true"
        android:background="@drawable/customedittext"
        android:layout_marginBottom="15dp"
        android:gravity="top" />





</RelativeLayout>
